                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DataTemplate>

        <DataTemplate x:Key="HeaderTemplate">
            <ContentControl Content="{Binding Title}" />
        </DataTemplate>

    </Page.Resources>
    
